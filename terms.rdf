<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="terms.xsl"?>
<rdf:RDF xmlns="http://www.w3.org/1999/xhtml"
         xmlns:skos="http://www.w3.org/2004/02/skos/core#"
         xmlns:dc="http://purl.org/dc/terms/"
         xmlns:dctype="http://purl.org/dc/dcmitype/"
         xmlns:dcat="http://www.w3.org/ns/dcat#"
         xmlns:foaf="http://xmlns.com/foaf/0.1/"
         xmlns:owl="http://www.w3.org/2002/07/owl#"
         xmlns:csvw="http://www.w3.org/ns/csvw#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#">
    <owl:Ontology rdf:about="http://w3id.org/poseidon/v1.0/terms.rdf">
        <rdfs:label xml:lang="en">The Poseidon Ontology</rdfs:label>
        <dc:title xml:lang="en">The Poseidon Ontology</dc:title>
        <rdfs:comment xml:lang="en">
            The Poseidon Ontology is an RDF vocabulary describing the dataset types, tables
            and columns specified in the Poseidon package format for archaeogenetic data.
        </rdfs:comment>
        <owl:versionInfo xml:lang="en">Version 1.0 (2020-02-14)</owl:versionInfo>
        <foaf:homepage rdf:resource="http://w3id.org/poseidon" />
    </owl:Ontology>

    <!--
        Key Entities
    -->
    <rdfs:Class rdf:about="http://w3id.org/poseidon/v1.0/terms.rdf#packageDefinition" dc:type="module">
        <csvw:name xml:lang="en">"PackageDefinition"</csvw:name>
        <rdfs:comment rdf:parseType="Literal">
            The class denoting a Poseidon package definition file.
        </rdfs:comment>
        <rdfs:subClassOf rdf:resource="http://www.w3.org/ns/dcat#Distribution"/>
    </rdfs:Class>

    <rdfs:Class rdf:about="http://w3id.org/poseidon/v1.0/terms.rdf#sitesTable" dc:type="module">
        <csvw:name xml:lang="en">"SitesTable"</csvw:name>
        <rdfs:comment rdf:parseType="Literal">
            The class denoting the Poseidon Site Table
        </rdfs:comment>
        <csvw:url>"sitesTable.csv"</csvw:url>
    </rdfs:Class>

    <rdfs:Class rdf:about="http://w3id.org/poseidon/v1.0/terms.rdf#samplesTable" dc:type="module">
        <csvw:name xml:lang="en">"SamplesTable"</csvw:name>
        <rdfs:comment rdf:parseType="Literal">
            The class denoting the Poseidon Sample Table
        </rdfs:comment>
        <csvw:url>"samplesTable.csv"</csvw:url>
    </rdfs:Class>

    <!--
        Top Level Properties
    -->

    <rdf:Property rdf:about="http://w3id.org/poseidon/v1.0/terms.rdf#readme">
        <rdfs:comment rdf:parseType="Literal">
            An optional readme file for the package
        </rdfs:comment>
        <rdfs:subPropertyOf rdf:resource="http://purl.org/dc/terms/about" />
    </rdf:Property>

    <!--
        Reference properties (aka foreign keys)
    -->
    <rdf:Property rdf:about="http://w3id.org/poseidon/v1.0/terms.rdf#siteReference"
                  dc:type="reference-property">
        <rdfs:comment rdf:parseType="Literal">
            An identifier referencing a site by providing a foreign key into the SiteTable
        </rdfs:comment>
        <dc:references rdf:resource="#SiteTable"/>
        <csvw:name>"Site_ID"</csvw:name>
        <rdfs:subPropertyOf rdf:resource="http://purl.org/dc/terms/references" />
        <rdfs:seeAlso rdf:resource="https://en.wikipedia.org/wiki/Foreign_key" />
    </rdf:Property>

    <rdf:Property rdf:about="http://w3id.org/poseidon/v1.0/terms.rdf#sampleReference"
                  dc:type="reference-property">
        <rdfs:comment rdf:parseType="Literal">
            An identifier referencing an Sample by providing a foreign key into the SampleTable
        </rdfs:comment>
        <dc:references rdf:resource="#SampleTable"/>
        <csvw:name>"Sample_ID"</csvw:name>
        <rdfs:subPropertyOf rdf:resource="http://purl.org/dc/terms/references" />
        <rdfs:seeAlso rdf:resource="https://en.wikipedia.org/wiki/Foreign_key" />
    </rdf:Property>

    <!--
        Lots to follow... more foreign keys. Table names, column names...
    -->

</rdf:RDF>
